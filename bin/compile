#!/bin/sh
# usage: bin/compile <build-dir> <cache-dir>

set -e

mkdir -p "$1" "$2"
build=$(cd "$1/" && pwd)
cache=$(cd "$2/" && pwd)
ver=go1
file=go.$ver.linux-amd64.tar.gz
url=http://go.googlecode.com/files/$file

if test -e $build/bin && ! test -d $build/bin
then
    echo >&2 '-----> ERROR: File bin exists and is not a directory.'
    exit 1
fi

echo "-----> Using Go $ver"

(
    set -e

    # Already cached?
    test -d $cache/go-$ver/go && exit

    rm -rf $cache/* # be sure not to build up cruft
    mkdir -p $cache/go-$ver
    mkdir -p $cache/dependencies
    cd $cache/go-$ver
    echo "-----> Fetching Go $ver"
    curl -sO $url
    tar zxf $file
    rm -f $file
)

GOROOT=$cache/go-$ver/go export GOROOT
GOPATH=$cache/dependencies:$build export GOPATH
PATH=$build/bin:$GOROOT/bin:$PATH

unset GIT_DIR # unset git dir or it will mess with goinstall
echo "-----> Running go get and go install"
cd $build
go get ./...
